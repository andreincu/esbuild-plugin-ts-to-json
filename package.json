{
  "version": "1.0.3",
  "name": "esbuild-plugin-ts-to-json",
  "description": "A plugin for esbuild to transform TypeScript files to JSON format. Specific for generating manifest.json.",
  "author": "Andrei Iancu",
  "license": "ISC",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "esbuild",
    "plugin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "tag": "git tag v$(node -p \"require('./package.json').version\") && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "flugin-tsconfig": "^1.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "esbuild": "^0.24.0"
  }
}
